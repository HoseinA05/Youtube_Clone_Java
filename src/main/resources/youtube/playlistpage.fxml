                <VBox fx:id="leftPanelMax" styleClass="leftPanelContainer" AnchorPane.bottomAnchor="0" AnchorPane.topAnchor="0">

                    <HBox>
                        <Button graphicTextGap="20" maxWidth="Infinity" styleClass="menuBtn, selected" text="Home" HBox.hgrow="ALWAYS">
