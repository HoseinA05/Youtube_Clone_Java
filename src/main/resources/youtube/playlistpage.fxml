                        </graphic>
                    </Button>

                </VBox>

                <VBox styleClass="plInfoContainer" spacing="10" prefWidth="400" AnchorPane.bottomAnchor="25" AnchorPane.topAnchor="25">
                    <ImageView fx:id="plImage" fitWidth="320" fitHeight="180" preserveRatio="false">
                        <Image url="@testImg.jpg" />
