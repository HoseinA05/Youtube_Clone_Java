        <VBox id="formBox">
            <HBox styleClass="inputBox" >
                <Label text="Username: " />
                <TextField fx:id="usernameInput" promptText="Username Or Email"/>
            </HBox>

            <HBox styleClass="inputBox" >
                <Label text="Password : " />
                <PasswordField fx:id="passwordInput" promptText="Password"/>
            </HBox>

            <HBox styleClass="btnsContainer">
                <Button id="signinBtn" text="Create account" onAction="#createAccountBtnHandler"/>
                <Button id="signupBtn" text="Sign In" onAction="#signInBtnHandler"/>
